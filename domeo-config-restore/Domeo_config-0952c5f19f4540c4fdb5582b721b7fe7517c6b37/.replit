language = "nodejs"
entrypoint = "app/package.json"
run = "bash -lc 'cd app && ([ -d node_modules ] || npm ci); npm run dev -- --port ${PORT:-3000} --hostname 0.0.0.0'"
modules = ["nodejs-20"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Development Server"

[[workflows.workflow]]
name = "Next.js Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npm run dev -- --hostname 0.0.0.0 --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
