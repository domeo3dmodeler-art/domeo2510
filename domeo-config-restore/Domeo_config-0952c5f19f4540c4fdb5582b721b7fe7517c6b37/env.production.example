# Production Environment Variables для YC VM
# Скопируйте этот файл в .env.production и заполните реальными значениями

# Database Configuration
POSTGRES_DB=domeo
POSTGRES_USER=domeo
POSTGRES_PASSWORD=your_secure_password_here

# Next.js Configuration
NODE_ENV=production
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars
NEXTAUTH_URL=https://your-domain.com

# Yandex Cloud Storage
YANDEX_STORAGE_ACCESS_KEY=your_access_key
YANDEX_STORAGE_SECRET_KEY=your_secret_key
YANDEX_STORAGE_BUCKET=your-bucket-name
YANDEX_STORAGE_ENDPOINT=https://storage.yandexcloud.net

# Redis Configuration (опционально)
REDIS_PASSWORD=your_redis_password_here

# Monitoring (опционально)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Security
JWT_SECRET=your_jwt_secret_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars

# Email Configuration (если используется)
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=your_email@yandex.ru
SMTP_PASS=your_email_password

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Performance
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=16

