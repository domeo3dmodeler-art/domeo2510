# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Application
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Database
POSTGRES_DB=domeo
POSTGRES_USER=domeo
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://domeo:your_secure_postgres_password_here@postgres:5432/domeo

# Redis Cache
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# Authentication
NEXTAUTH_SECRET=your_super_secret_nextauth_key_here_minimum_32_characters
NEXTAUTH_URL=https://yourdomain.com
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# Yandex Object Storage
YANDEX_STORAGE_ACCESS_KEY_ID=your_yandex_access_key_id
YANDEX_STORAGE_SECRET_ACCESS_KEY=your_yandex_secret_access_key
YANDEX_STORAGE_BUCKET_NAME=your_bucket_name
YANDEX_STORAGE_REGION=ru-central1

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here
PROMETHEUS_PORT=9090

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Email (if needed)
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=your_email@yandex.ru
SMTP_PASS=your_email_password
SMTP_FROM=noreply@yourdomain.com
